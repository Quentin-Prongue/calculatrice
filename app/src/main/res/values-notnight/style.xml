<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Style général de l'application -->
    <style name="Theme.MaCalculatrice" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customisation du thème -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/lightsteelblue</item>
        <item name="colorOnPrimary">@color/dodgerblue</item>
        <item name="colorSecondary">@color/lightblue</item>
        <item name="colorSecondaryVariant">@color/lightsteelblue</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/dodgerblue</item>
    </style>

    <!-- Style pour les input text -->
    <style name="Widget.MaCalculatrice.TextInputLayer" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/dodgerblue</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!-- Style pour les boutons -->
    <style name="Widget.MaCalculatrice.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/dodgerblue</item>
    </style>
</resources>